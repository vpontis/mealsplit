<!-- Let's use Roadie gem, then we can just use a style tag in the head of this file -->
<!-- primary author: Ty -->
<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
    <style type="text/css">
      .center {
        text-align: center;
      }

      /* meal summary page */
      #meal-summary {
        padding: 10px;

        .participant-details {
          padding: 10px;
          margin: 10px;
          hr {
            margin: 2px;
          }
          .email {
            font-size: 150%;
          }
        }

        .item {
          width: 200px;
          display: inline-block; 
        }

        .cost {
          width: 60px;
          display: inline-block;
        }
      }
    </style>
  </head>
  <body>
    <h1>Thank you for using MealSplit!</h1>

    <h3><b><%= @meal_payer %></b> is asking for payment for your recent meal at <b><%= @meal.restaurant.name %>.</b></h3>

    <% @participant.food_items.each do |item| %>
      <div>
        <span class="item"><%= item.name %></span>
        <span class="cost"><%= item.cost_pretty %></span>
      </div>
    <% end %>

    <hr />

    <div class="subtotal">
      <span class="item">Subtotal:</span> 
      <span class="cost"><%= number_to_currency(@participant.subtotal) %></span>
    </div>
    <div class="subtotal">
      <span class="item">Tax: </span>
      <span class="cost"><%= number_to_currency(@participant.tax) %></span>
    </div>
    <div class="subtotal">
      <span class="item">Tip: </span>
      <span class="cost"><%= number_to_currency(@participant.tip) %></span>
    </div>

    <hr />
    <div class="total">
      <span class="item">Total:</span>
      <span class="cost"><%= number_to_currency(@participant.total + @participant.tip) %></span>
    </div>        

    <h4>Yum Yum!</h4>
  </body>
</html>