<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Create restaurant</h1>
    <%= form_for(@restaurant, html: {role: 'form', class: 'form-group'}) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :restaurant, :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :restaurant, :city, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Create restaurant", class: 'form-control btn btn-success' %>
      </div>
    <% end %>

    <br />

    <%= link_to "Back", restaurants_path %>
  </div>
</div>