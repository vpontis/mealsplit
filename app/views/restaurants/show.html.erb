<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= @restaurant.name %></h1>
    <h4><em><%= @restaurant.city %></em></h4>

    <h2>Food Items</h2>
    <%= render partial: 'food_item', collection: @restaurant.food_items %>

    <% if @manage_restaurant_permission %>
      <h2>Add Food Item</h2>
      <%= form_for(@restaurant, html: {role: 'form', class: 'form-group'}) do %>
        <div class="form-group">
          <%= label_tag :name, 'Name' %>
          <%= text_field :food_item, :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag :cost, "Cost (in dollars, no $)" %>
          <%= text_field :food_item, :cost, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= submit_tag "Create food item", class: 'btn btn-success' %>
        </div>
      <% end %>
    <% end %>
    
    <br />

    <%= link_to "Back", restaurants_path %>
  </div>
</div>