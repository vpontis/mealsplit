<div class="col-md-offset-3 col-md-6 center">
  <h1>Profile for <%= current_user.name %></h1>

  <% current_user.owes.each do |info| %>
    <div>
      You owe <%= info['payer'] %> <%= number_to_currency(info['total']) %> for the meal at <%= info['restaurant'] %>
    </div>
  <% end %> 

  <hr />

  <%= link_to "View Past Meals", meals_path %> <br />
  <%= link_to "Change Name", edit_user_path(current_user) %> <br />
  <%= link_to "Change Password", edit_user_password_path(current_user) %>
</div>