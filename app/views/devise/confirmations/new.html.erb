<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 class="center">Resend confirmation instructions</h2>

    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, class: "form-group", role: "form" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Resend confirmation instructions", class: "form-control btn btn-success" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
