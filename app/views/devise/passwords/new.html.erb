<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <h2 class="center">Change your password</h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "form-group", role: "form" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.password_field :email, :autofocus => true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Send me reset password instructions", class: "form-control btn btn-success" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>